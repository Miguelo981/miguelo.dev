---
import type { Service } from "../../models/service.model";
import { ReactSVG } from 'react-svg';
import { t } from "i18next";

export interface Props {
    serviceList: Service[];
}

const { serviceList } = Astro.props;
---

<>
    {
        serviceList.map((service) => (
                <div class='p-5 border-gray-300 border rounded-xl shadow-lg ease-in duration-150 transition hover:shadow-2xl w-52 bg-gray-100 hover:bg-white flex flex-col items-center h-auto text-center'>
                    {/* <img src={`/assets/icons/${service.Icon}.svg`} class="w-16 h-auto mx-auto fill-current text-blue-500 pb-4" /> */}
                    <ReactSVG client:idle src={`/assets/img/icons/${service.icon}.svg`} className="w-16 h-auto mx-auto fill-current text-blue-500 pb-4" />
                    <h3 class="text-base md:text-xl text-black font-bold pb-1 md:pb-3">{t(service.title)}</h3>
                    <p class="text-xs md:text-sm text-black mt-auto">{t(service.description)}</p>
                </div>
            ))
    }
</>