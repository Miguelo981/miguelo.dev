    xmlns="http://www.w3.org/2000/svg"
    class="stroke-white group-hover:stroke-blue-600 h-5 w-auto"
    viewBox="0 0 24 24"
    stroke-width="2"
    stroke="currentColor"
    fill="none"
    stroke-linecap="round"
    stroke-linejoin="round"
