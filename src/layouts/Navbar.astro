---
import LanguagePicker from "../components/LanguagePicker";
import NavList from "../components/Lists/NavList";
import { DEFAULT_LANG } from "../config/i18n.config";

var { lang } = Astro.params;

if (typeof lang !== "string") {
    lang = DEFAULT_LANG;
}

---

<nav class="fixed z-50 w-full bg-black/25 backdrop-blur-md">
    <div class="container mx-auto flex justify-end">
        <div class="hidden md:block px-2 sm:px-4 py-2.5" id="navbar-default">
            <ul class="flex flex-col mt-4 md:flex-row md:space-x-8 md:mt-0 md:text-sm md:font-medium justify-end items-center">
                <NavList client:visible className="font-light text-white hover:text-blue-500 transition duration-500 text-xl" lang={lang} />
                <LanguagePicker client:visible />
            </ul>
        </div>
    </div>
</nav>